<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbPaginaPrincipal" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.iesalandalus.programacion.reservasaulas.vista.grafica.controladores.ControladorPaginaPrincipal">
  <children>
      <MenuBar fx:id="mbPaginaPrincipal">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
                  <MenuItem fx:id="miSalir" mnemonicParsing="false" text="Salir" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem fx:id="miAcercaDe" mnemonicParsing="false" text="Acerca de" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
    <AnchorPane fx:id="apPaginaPrincipal" maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <TabPane fx:id="tpPaginaPrincipal" prefHeight="400.0" prefWidth="640.0" tabClosingPolicy="UNAVAILABLE">
              <tabs>
                  <Tab fx:id="tpAulas" text="Aulas">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="tvAulas" prefHeight="275.0" prefWidth="640.0">
                                 <columns>
                                    <TableColumn fx:id="tcNombreAula" prefWidth="105.0" text="Nombre del aula" />
                                    <TableColumn fx:id="tcNumPuestos" prefWidth="138.0" text="Número de puestos" />
                                 </columns>
                              </TableView>
                              <Button fx:id="btAnadirAula" layoutX="62.0" layoutY="298.0" mnemonicParsing="false" onAction="#anadirAula" text="Añadir Aula" />
                              <Button fx:id="btBorrarAula" layoutX="209.0" layoutY="298.0" mnemonicParsing="false" onAction="#BorrarAula" text="Borrar Aula" />
                              <Button fx:id="btVerReservasAulas" layoutX="360.0" layoutY="298.0" mnemonicParsing="false" onAction="#VerReservasAulas" text="Ver Reservas Aula" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
                  <Tab fx:id="tpProfesores" text="Profesores">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="tvProfesores" prefHeight="275.0" prefWidth="640.0">
                                 <columns>
                                    <TableColumn fx:id="tcNombreProfesor" prefWidth="131.0" text="Nombre del profesor" />
                                    <TableColumn fx:id="tcCorreo" prefWidth="112.0" text="Correo" />
                                    <TableColumn fx:id="tcTelefono" prefWidth="131.0" text="Teléfono" />
                                 </columns>
                              </TableView>
                              <Button fx:id="btAnadirProfesor" layoutX="62.0" layoutY="298.0" mnemonicParsing="false" onAction="#AnadirProfesor" text="Añadir Profesor" />
                              <Button fx:id="btBorrarProfesor" layoutX="209.0" layoutY="298.0" mnemonicParsing="false" onAction="#BorrarProfesor" text="Borrar Profesor" />
                              <Button fx:id="btVerReservasProfesor" layoutX="377.0" layoutY="298.0" mnemonicParsing="false" onAction="#ReservasProfesor" text="Reservas del profesor" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
                  <Tab fx:id="tpReservas" text="Reservas">
                     <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                           <children>
                              <TableView fx:id="tvReservas" prefHeight="275.0" prefWidth="640.0">
                                 <columns>
                                    <TableColumn fx:id="tcNombreProfesorReservas" prefWidth="125.0" text="Profesor" />
                                    <TableColumn fx:id="tcNombreAulaReservas" prefWidth="94.0" text="Aula" />
                                    <TableColumn fx:id="tcFechaReserva" prefWidth="114.0" text="Fecha Reserva" />
                                    <TableColumn fx:id="tcTramoHora" minWidth="0.0" text="Tramo/hora" />
                                    <TableColumn fx:id="tcPuntos" minWidth="0.0" prefWidth="98.0" text="Puntos" />
                                 </columns>
                              </TableView>
                              <Button fx:id="btCrearReserva" layoutX="90.0" layoutY="299.0" mnemonicParsing="false" onAction="#CrearReserva" text="Crear Reserva" />
                              <Button fx:id="btAnularReserva" layoutX="342.0" layoutY="299.0" mnemonicParsing="false" onAction="#AnularReserva" text="Anular Reserva" />
                           </children>
                        </AnchorPane>
                     </content>
                  </Tab>
              </tabs>
            </TabPane>
      </children>
    </AnchorPane>
  </children>
</VBox>
